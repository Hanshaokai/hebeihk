<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    android:id="@+id/card_handle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/receive_notifi_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fab_add"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/receive_notifi_receipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:minEms="3"
                android:text="发送人"
                android:textColor="@color/grey"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="发布通知"
                android:textColor="@color/grey"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/receive_notifi_sendtiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="10dp"

                android:text="时间"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/receive_notfi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:ellipsize="end"
            android:minLines="2"
            android:text="标题"

            android:textColor="@color/black"
            android:textSize="20sp"

            />
        <!--<TextView
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />-->
        <TextView
            android:id="@+id/receive_notifi_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"

            android:ellipsize="end"
            android:minLines="2"
            android:text="内容"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <!--<TextView
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />-->

        <!-- <TextView
             android:background="#000000"
             android:layout_width="1dp"
             android:layout_height="match_parent"

             />-->
    </LinearLayout>
</android.support.v7.widget.CardView>




