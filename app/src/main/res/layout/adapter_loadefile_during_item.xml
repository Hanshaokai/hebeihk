<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
    >

    <TextView
        android:id="@+id/tv_during_filename_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/tv_during_remove_item"
        android:text="文件名字"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tv_during_complete_percent_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_during_filename_item"
        android:text="完成度"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_during_filesize_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_during_filename_item"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_during_complete_percent_item"
        android:text="大小"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_during_filestate_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_during_filename_item"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_during_filesize_item"
        android:text="状态"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_during_downlode_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_during_filestate_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/start"
        android:textColor="@color/blue"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_during_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_during_filename_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/remove"
        android:textColor="@color/blue"
        android:textSize="18sp"
        />

</RelativeLayout>