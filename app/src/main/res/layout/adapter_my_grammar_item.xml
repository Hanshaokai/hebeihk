<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="3dp"


        >

        <ImageView
            android:id="@+id/tv_my_grammar_pic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
           android:layout_centerInParent="true"
            android:src="@mipmap/docimg"
            />


        <TextView
            android:id="@+id/tv_my_grammar_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_my_grammar_pic_item"
            android:text="wewe"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_my_grammar_version_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_grammar_name_item"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_my_grammar_pic_item"
            android:text="werww"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_grammar_version_item"
            android:layout_toRightOf="@+id/tv_my_grammar_pic_item"
            >


            <TextView
                android:id="@+id/tv_my_grammer_issubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="fewwe"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_my_grammer_isapproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="fwew"
                android:textColor="@color/black"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/tv_my_grammer_iscomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="fwew"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>