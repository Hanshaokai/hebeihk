<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:id="@+id/card_handle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        >
        <!--<TextView

            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />-->
        <!--<CheckBox
            android:id="@+id/yetsend_notifi_recy_chb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"

            />-->
        <!--  <TextView
              android:background="#000000"
              android:layout_width="1dp"
              android:layout_height="match_parent"

              />-->
        <TextView
            android:id="@+id/yetsend_approval_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"


            android:text="申请类型"
            android:textColor="@color/bg_blue_01"
            android:textSize="20sp"

            />
        <!--<TextView
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            />-->
        <TextView
            android:id="@+id/yetsend_approval_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/yetsend_approval_type"

            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:padding="5dp"
            android:text="内容"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/yetsend_approval_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"

            android:layout_toRightOf="@+id/yetsend_approval_type"
            android:gravity="right"
            android:text="是否审批"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/yetsend_approval_sendtiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/yetsend_approval_type"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="时间"
            android:textSize="12sp"
            />
        <!-- <TextView
             android:background="#000000"
             android:layout_width="1dp"
             android:layout_height="match_parent"

             />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>


