<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/head_appbar_include"></include>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestscroll_receiapproval_Deatail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_bg1"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@color/space_color"
                    />


                <TextView
                    android:id="@+id/tv_receiapproval_Deatail_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bg1"
                    android:layout_margin="8dp"
                    android:text="发送人"
                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Deatail_approvalType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bg1"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/tv_receiapproval_Deatail_sender"

                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Deatail_sendtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_bg1"
                    android:layout_marginRight="8dp"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_bg2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_gray"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bg2"
                    android:layout_margin="5dp"
                    android:text="申请内容:"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Deatail_Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:minLines="8"
                    android:text="内容"
                    android:textColor="@color/silver"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_receiapproval_Deatail_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="附件："
                    android:textColor="@color/silver"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Deatail_attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_receiapproval_Detail_result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_bg7"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/space_color"
                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Detail_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bg7"
                    android:layout_margin="5dp"
                    android:text="知会人:"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_receiapproval_Detail_who_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_receiapproval_Detail_inform"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/tv_receiapproval_Detail_inform"
                    android:text="知会人"
                    android:textColor="@color/black"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_bg3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_receiapproval_Detail_who_inform"
                android:background="@color/silver"
                />

            <TextView
                android:id="@+id/tv_receiapproval_Detail_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bg3"
                android:layout_margin="5dp"
                android:text="审批结果:"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/silver"
                />

            <LinearLayout
                android:id="@+id/ll_receiapproval_Detail_commentContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            </LinearLayout>

            <Button
                android:id="@+id/btn_receiapproval_Detail_toApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/butonshape"
                android:text="审批"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/silver"
                />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>