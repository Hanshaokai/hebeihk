<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    >


    <android.support.v7.widget.CardView
        android:id="@+id/card_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            >
            <!--<TextView

                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"

                />-->
            <!--<CheckBox
                android:id="@+id/yetsend_notifi_recy_chb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"

                />-->
            <!--  <TextView
                  android:background="#000000"
                  android:layout_width="1dp"
                  android:layout_height="match_parent"

                  />-->
            <TextView
                android:id="@+id/yetsend_notfi_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_marginTop="5dp"
                android:minLines="2"
                android:text="标题"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="20sp"

                />
            <!--<TextView
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"

                />-->
            <TextView
                android:id="@+id/yetsend_notifi_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:minLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/yetsend_notfi_title"
                android:layout_marginLeft="15dp"
                android:text="内容"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/yetsend_notifi_receipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/yetsend_notifi_content"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:text="接受人"
                android:textSize="12sp"

                />
            <!--<TextView
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"

                />-->
            <TextView
                android:id="@+id/yetsend_notifi_sendtiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/yetsend_notifi_receipe"
                android:layout_marginRight="10dp"
                android:text="时间"
                android:textSize="12sp"
                />
            <!-- <TextView
                 android:background="#000000"
                 android:layout_width="1dp"
                 android:layout_height="match_parent"

                 />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>



