<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
    >

    <include layout="@layout/head_appbar_include"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"

            >

            <ImageView
                android:id="@+id/iv_headimg_person_detail_contacts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_logo"
                />

            <TextView
                android:id="@+id/tv_realname_person_detail_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_headimg_person_detail_contacts"

                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_tel_person_detail_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_headimg_person_detail_contacts"
                android:layout_alignLeft="@+id/tv_realname_person_detail_contacts"
                android:layout_below="@+id/tv_realname_person_detail_contacts"
                android:gravity="center"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/tv_duty_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="上课班级"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_duty_person_detail_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_duty_txt"

                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_duty_person_detail_contacts"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_email_person_detail_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_line1"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_email_txt"

                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_email_txt"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_email_person_detail_contacts"
                android:layout_alignBottom="@+id/tv_email_person_detail_contacts"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:minEms="4"
                android:text="邮箱地址"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/btn_totel_person_detail_contacts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/butonshape"
                android:text="打电话"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/btn_short_message_person_detail_contacts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/butonshape"
                android:text="发短信"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/btn_send_message_person_detail_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/butonshape"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>